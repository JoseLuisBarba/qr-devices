<div class="row">
    <div class="col s12 m8">
        <h3>Mi Perfil</h3>
        <div class="card user">
            <div class="card-content">
                <span class="card-title">Creado en:  {{formatDate user.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-title">Nombres: {{user.firstName}}</span>
                <span class="card-title">Apellidos: {{user.lastName}}</span>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                     {{user.firstName}}
                </span>
                <img src="{{user.image}}" class="circle responsive-img img-small">
            </div> 
            <div class="card-action">
                <a href="/users/edit/{{user._id}}">Editar mi perfil</a>
            </div>   
        </div>
    </div>
</div>

<!-- Imaformations -->
<div class="row">

    <!--Devices number-->
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <p> {{numberDevices}} </p>
                <p><i class="fa fa-laptop prefix"></i> Dispositivos</p>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <p> 18 </p>
                <p><i class="fa fa-pen-to-square prefix"></i> Modificaciones</p>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <p> 18 </p>
                <p><i class="fa fa-user prefix"></i> Sesiones</p>
            </div>
        </div>
    </div>

</div>

<div class="row">
    <ul class="collapsible">
        <li>
            <div class="collapsible-header"><i class="fa-solid fa-circle-info prefix" ></i>Información General</div>
            <div class="collapsible-body">
                <div class="row">
                    <span >Número de matricula: {{user.collegeID}}</span>
                </div>
                <div class="row">
                    <span >Nombres: {{user.displayName}}</span>
                </div>
                <div class="row">
                    <span >Género: {{user.gender}}</span>
                </div>
                <div class="row">
                    <span >Fecha de nacimiento: {{user.birthdate}}</span>
                </div>
            </div>
        </li>
        <li>
            <div class="collapsible-header"><i class="fa-regular fa-comment-dots prefix"></i>Contácto</div>
            <div class="collapsible-body">
                <div class="row">
                    <span >Telefono: {{user.phone}}</span>
                </div>
                <div class="row">
                    <span >Email: {{user.email}}</span>
                </div>
            </div>
        </li>
        <li>
            <div class="collapsible-header"><i class="fa-sharp fa-solid fa-location-dot prefix"></i>Dirección</div>
            <div class="collapsible-body">
                <div class="row">
                    <span >Dirección: {{user.address}}</span>
                </div>
            </div>
        </li>
        
        
    </ul>
</div>

