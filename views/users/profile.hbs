<div class="row">
    <div class="col s12 m8">
        <h3>Mi Perfil</h3>
        <div class="card user">
            <div class="card-content">
                <span class="card-title">Creado en:  {{formatDate user.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-title">Nombres: {{user.firstName}}</span>
                <span class="card-title">Apellidos: {{user.lastName}}</span>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">
                     {{user.firstName}}
                </span>
                <img src="{{user.image}}" class="circle responsive-img img-small">
                <a href="/users/edit/{{user._id}}" class="btn btn-float posfix center-align">
                        <i class="fas fa-edit posfix"></i> Editar mi perfil
                </a>
            </div>    
        </div>
    </div>
</div>

