


<!-- no edit -->

<div class="row">
    <div class="col s12 m8">
        <h3>Edit your profile
            
        </h3>
        <div class="card device">
            <div class="card-content">
                <span class="card-title">{{formatDate user.createdAt 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-title">{{user.firstName}}</span>
                <span class="card-title">{{user.lastName}}</span>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{user.firstName}}</span>
                <img src="{{user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="">More From {{user.firstName}}</a>
            </div>
        </div>
    </div>
</div>



<!-- Form -->


<div class="row">
    <div class="card device"></div>
        <form action="/devices" method="POST" class="col s12">

            
            


            <!--  device photo 
            <div class="row">
                <div class="file-field input-field">
                    <div class="btn">
                        <span>File</span>
                        <input type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
