            -->

            <div class="row">
                <div class="row">
                    <!--  device serie -->
                    <div class="input-field col s6">
                        <i class="fa fa-address-card prefix"></i>
                        <input id="serie" name="serie" type="text" class="validate">
                        <label for="serie">college ID</label>
                    </div>
                    <!--  device date -->
                    <div class="input-field col s6">
                        <i class="fa fa-calendar prefix"></i>
                        <input id="date" name="date" type="text" class="datepicker">
                        <label for="date">birthdate</label>
                    </div>

                </div>
            </div>



            <div class="row">
                <div class="row">

                    <!--  user address -->
                    <div class="input-field col s6">
                        <i class="fa fa-house prefix"></i>
                        <input id="icon_telephone" type="tel" class="validate">
                        <label for="icon_telephone">Address</label>
                    </div>


                    <!--  user telephone -->
                    <div class="input-field col s6">
                        <i class="fa fa-phone prefix"></i>
                        <input id="icon_telephone" type="tel" class="validate">
                        <label for="icon_telephone">Telephone</label>
                    </div>

                    

                </div>
            </div>


            <div class="row">
                <div class="row">
                    <!--  device march -->
                    <div class="input-field col s6">
                        <i class="fa fa-venus-mars prefix"></i>
                        <input id="march" name="march" type="text" class="validate">
                        <label for="march">Gender</label>
                    </div>
                    <!--  device model -->
                    <div class="input-field col s6">
                        <i class="fa fa-building-columns prefix"></i>
                        <input id="model" name="model" type="text" class="validate">
                        <label for="model">Academic program</label>
                    </div>

                </div>
            </div>



            <div class="row">
                <input type="submit" value="Save" class="btn">
                <a href="/dashboard" class="btn orange">Cancel</a>
            </div>
        

        </form>
    </div>
</div>



