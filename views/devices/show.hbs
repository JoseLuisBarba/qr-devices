<div class="row">
    <div class="col s12 m8">
        <h3>{{device.serie}}
            <small>{{{editIcon device.user user device._id false}}}</small>
        </h3>
        <div class="card device">
            <div class="carousel">
                <a class="carousel-item" href="#one!"><img src="/uploads/devices/{{device.image}}" alt=""></a>
                <a class="carousel-item" href="#two!"><img src="/uploads/devices/{{device.image}}" alt=""></a>
                <a class="carousel-item" href="#three!"><img src="/uploads/devices/{{device.image}}" alt=""></a>
                <a class="carousel-item" href="#four!"><img src="/uploads/devices/{{device.image}}" alt=""></a>
                <a class="carousel-item" href="#five!"><img src="/uploads/devices/{{device.image}}" alt=""></a>
            </div>
            <a href="#" class="btn large waves-effect waves-orange grey-text text-darken-4" style="background-color: #ECF8F9;">Ver QR</a>
            <a href="#" class="btn large waves-effect waves-green grey-text text-darken-4" style="background-color: #ECF8F9;">Generar nuevo QR</a>
            <a href="/dashboard" class="btn large waves-effect waves-green grey-text text-darken-4" style="background-color: #ECF8F9;">Regresar</a>
        </div>
        <div class="card device">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                <span class="card-title">Caracteristicas:</span>
                {{{device.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{device.user.firstName}}</span>
                <img src="{{device.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/devices/user/{{device.user._id}}">Más de {{device.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>

<!--Information of device-->
<div class="row">
    <div class="col s12 m8">
        <div class="card device">
            <div class="card-content">
                 <ul class="collapsible popout">
                    <li>
                        <div class="collapsible-header"><i class="fa-solid fa-circle-info prefix"></i>Información</div>
                        <div class="collapsible-body">
                            <div class="row">
                                <span >Serie: {{device.serie}}</span>
                            </div>
                            <div class="row">
                                <span >Tipo: {{device.type}}</span>
                            </div>
                            <div class="row">
                                <span >Fecha de compra: {{device.date}}</span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header"><i class="fa-brands fa-android prefix"></i></i>Características</div>
                        <div class="collapsible-body">
                            <div class="row">
                                <span >Marca: {{device.march}}</span>
                            </div>
                            <div class="row">
                                <span >Modelo: {{device.model}}</span>
                            </div>
                            <div class="row">
                                <span >Color: {{device.color}}</span>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header"><i class="fa-regular fa-comment-dots prefix"></i>Contacto</div>
                        <div class="collapsible-body">
                            <div class="row">
                                <span >Nombre: {{device.user.displayName}}</span>
                            </div>
                            <div class="row">
                                <span >Telefono: {{device.user.phone}}</span>
                            </div>
                            <div class="row">
                                <span >Email: {{device.user.email}}</span>
                            </div>
                            <div class="row">
                                <span >Dirección: {{device.user.address}}</span>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>





